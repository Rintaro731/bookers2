<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, size:"100x100", format:'jpeg', fallback:"no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></ths
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(user.id), class: "btn vtn-outline-secondary btn-block", method: :get do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>